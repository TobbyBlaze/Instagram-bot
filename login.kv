#:include connected.kv

<Login>:
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [50,50,50,50]
        spacing: 50
        background_color: (255/255, 0/255, 105/255, 0.5)
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: 'Insta bot'
            font_size: 50

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Email'
                font_size: 30
                halign: 'left'
                text_size: root.width-100, 30

            TextInput:
                id: email
                multiline:False
                font_size: 28
                hint_text: 'abc@email.com'
                hint_text_color: (255/255, 0/255, 105/255, 0.5)
                keyboard_suggestions: True

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 30
                text_size: root.width-100, 30

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28


        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Comment'
                halign: 'left'
                font_size: 30
                text_size: root.width-100, 30

            TextInput:
                id: comment
                multiline:True
                font_size: 28
                hint_text: 'This is such a wonderful comment.'
                hint_text_color: (255/255, 0/255, 105/255, 0.5)
                keyboard_suggestions: True
                on_touch_down: root.change()

        BoxLayout:
            Label:
                text: 'Comment on how many posts: '+str(comment_no.value)

            Slider:
                id: comment_no
                min: 1
                max: 1000
                step: 1
                orientation: 'horizontal'
                border_horizontal: [0, 1, 0, 1]
                value_track: True
                value_track_color: (118/255, 56/255, 250/255, 0.5)
                value_track_width: '4dp'


        Button:
            text: 'Start commenting'
            font_size: 32
            background_color: (118/255, 56/255, 250/255, 0.5)
            on_press: root.do_login(email.text, password.text, comment.text)